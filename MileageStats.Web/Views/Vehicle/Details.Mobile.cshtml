@model MileageStats.Web.Models.VehicleDetailsViewModel
           
@if (!Html.IsRenderingForMustache())
{
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.Title = "Details for " + @Model.Vehicle.Name;
}
    <nav>
        <ol class="title">
            <li><a href="@Url.Action("Index", "Dashboard")" class="dashboard icon only"><span>Dashboard</span></a></li>
            <li>@Mustache.Value(m => m.Vehicle.Name)</li>
        </ol>

        <ol class="tabs vehicle-details" >
            <li><a href="@Url.UnencodedAction("Details", "Vehicle", new { id = Mustache.Value(m => m.Vehicle.VehicleId) })" class="selected">Details</a></li>
            <li><a href="@Url.UnencodedAction("List", "Fillup", new { vehicleId = Mustache.Value(m => m.Vehicle.VehicleId) })">Fill Ups</a></li>
            <li><a href="@Url.UnencodedAction("List", "Reminder", new { vehicleId = Mustache.Value(m => m.Vehicle.VehicleId) })">Reminders</a></li>
        </ol>
    </nav>
    
    <div class="view">
    
    <dl class="list">
        <dt>@Html.LabelFor(model => model.Vehicle.Name)</dt>
        <dd>@Mustache.Value(m => m.Vehicle.Name)</dd>

        <dt>@Html.LabelFor(model => model.Vehicle.Year)</dt>
        <dd>@Mustache.Value(m => m.Vehicle.Year)</dd>

        <dt>@Html.LabelFor(model => model.Vehicle.MakeName)</dt>
        <dd>@Mustache.Value(m => m.Vehicle.MakeName)</dd>

        <dt>@Html.LabelFor(model => model.Vehicle.ModelName)</dt>
        <dd>@Mustache.Value(m => m.Vehicle.ModelName)</dd>

        <dt>@Html.LabelFor(model => model.Vehicle.Odometer)</dt>
        <dd>@Mustache.Value(model => model.Vehicle.Odometer) miles</dd>
    </dl>

    <ol class="hbox button-group">
        <li><a href="@Url.UnencodedAction("Edit", "Vehicle", new { id = Mustache.Value(m => m.Vehicle.VehicleId) })"><span>Edit</span></a></li>
    </ol>
    
    </div>