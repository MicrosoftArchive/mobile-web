@model MileageStats.Web.Models.VehicleFormModel
@{
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
    ViewBag.Title = "Add Vehicle";
}
<nav>
    <ol class="title">
        <li><a href="@Url.Action("Index", "Dashboard")" class="dashboard icon only"><span>Dashboard</span></a></li>
        <li>Add Vehicle</li>
    </ol>
</nav>

<div class="view">
    @using (Html.BeginForm("Add", "Vehicle", FormMethod.Post))
    {
        Html.RenderPartial("VehicleForm", Model);

        <p class="instructions">
            Note: Year, Make and Model are optional, but by providing them you get access
            to vehicle performance reports.
        </p>
    }
</div>
