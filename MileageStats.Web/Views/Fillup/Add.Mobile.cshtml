@model MileageStats.Web.Models.FillupEntryFormModel
@if(!Html.IsRenderingForMustache()){
    ViewBag.Title = "Add Fill up";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}

<nav>
    <ol class="title">
        <li><a href="@Url.Action("Index", "Dashboard")" class="dashboard icon only"><span>Dashboard</span></a></li>
        <li>@Mustache.ViewBag("VehicleName")</li>
    </ol>
    <ol class="breadcrumbs">
	    <li><a href="@Url.UnencodedAction("List", "Fillup", new { vehicleId = Mustache.RouteValue("vehicleId") })">Fill ups</a></li>
	    <li>Add Fill up</li>
    </ol>
</nav>
@{Html.RenderPartial("_Flash.Mobile");}
<div class="view">
    @{
        ViewContext.FormContext = new FormContext();
        ViewContext.FormContext.FormId = "form";
    }
    <form id="form" method="POST" action="@Url.UnencodedAction("Add", "Fillup", new { vehicleId = Mustache.RouteValue("vehicleId") })">
        @{ Html.RenderPartial("~/Views/Fillup/FillupForm.Mobile.cshtml", Model); }
    </form>
    @{
        ViewContext.OutputClientValidation();
    }
</div>