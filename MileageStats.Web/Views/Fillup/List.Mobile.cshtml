@model List<MileageStats.Web.Models.FillupListViewModel>
@{    
    ViewBag.Title = "Fill ups for " + ViewBag.VehicleName;
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}

<nav>
    <ol class="title">
        <li><a href="@Url.Action("Index", "Dashboard")" class="dashboard icon only"><span>Dashboard</span></a></li>
        <li>@ViewBag.VehicleName</li>
    </ol>

    <ol class="tabs vehicle-details" >
        <li><a href="@Url.Action("Details", "Vehicle", new { Id = Html.RouteValue("vehicleId") })">Details</a></li>
        <li><a href="@Url.Action("List", "Fillup", new { vehicleId = Html.RouteValue("vehicleId") })" class="selected">Fill Ups</a></li>
        <li><a href="@Url.Action("List", "Reminder", new { vehicleId = Html.RouteValue("vehicleId") })">Reminders</a></li>
    </ol>
</nav>

<div class="view">
    <ol class="hbox button-group">
		<li class="icon add"><a href="@Url.Action("Add", "Fillup", new { vehicleId = Html.RouteValue("vehicleId") })"><span>Add New Fillup</span></a></li>
	</ol>
	@Html.Partial("ListPartial.Mobile", Model)
</div>