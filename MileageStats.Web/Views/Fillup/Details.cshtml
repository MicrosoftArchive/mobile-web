@model MileageStats.Web.Models.FillupViewModel
@{
    ViewBag.Title = "Fill ups for " + ViewBag.VehicleName;
    var vehicleId = Html.RouteValue("vehicleId");
}
<div id="details-page">
    <div id="scrollable">
        <div>
             @{Html.RenderAction("ListPartial", "Vehicle", new { vehicleId, isCollapsed=true });}
        </div>
    </div>
    <div id="fixed">
        <div>
            <div id="info" class="framed article">
                <div>
                    <div id="details-pane" class="tab opened section">
                        @Html.ActionLink(" ", "Details", "Vehicle", new { id = vehicleId }, new { @class = "trigger" })
                    </div>
                    <div id="fillups-pane" class="tab opened section">
                        <a></a>
                        <div class="content">
                            <div class="header">
                                @using (Html.BeginForm("Add", "Fillup", new { vehicleId }, FormMethod.Get))
                                {
                                    <button data-action="fillup-add-selected" class="button generic small" type="submit">
                                        <img src="~/Content/button-add.png" title="Add Fill up" alt="Add" />
                                    </button>
                                }
                            </div>
                            <div class="aside">
                                @{ Html.RenderAction("ListPartial"); }
                            </div>
                            <div class="display article">
                                  @Html.Partial("DetailsPartial", Model)
                            </div>
                        </div>
                    </div>
                    <div id="reminders-pane" class="tab section">
                        @Html.ActionLink(" ", "List", "Reminder", new { vehicleId }, new { @class = "trigger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

