@model MileageStats.Web.Models.ReminderFormModel
@{
    ViewBag.Title = "Add Reminder";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}
<nav>
    <ol class="title">
        <li><a href="@Url.Action("Index", "Dashboard")" class="dashboard icon only"><span>Dashboard</span></a></li>
        <li>@ViewBag.VehicleName</li>
    </ol>
    <ol class="breadcrumbs">
	    <li><a href="@Url.Action("List", "Reminder", new { vehicleId = Model.VehicleId })">Reminders</a></li>
	    <li>Add Reminder</li>
    </ol>
</nav>

<div class="view">
    @using (Html.BeginForm())
    {
        if (Model != null)
        { 
        @Html.Partial("ReminderForm.Mobile", Model) 
        }
    }
</div>
