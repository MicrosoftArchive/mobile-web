@model MileageStats.Web.Models.ReminderDetailsViewModel
@{
    ViewBag.Title = "Reminders for " + ViewBag.VehicleName;
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}

<nav>
    <ol class="title">
        <li><a href="@Url.Action("Index", "Dashboard")" class="dashboard icon only"><span>Dashboard</span></a></li>
        <li>@ViewBag.VehicleName</li>
    </ol>

    <ol class="tabs vehicle-details" >
        <li><a href="@Url.Action("Details", "Vehicle", new { Id = ViewBag.VehicleId })">Details</a></li>
        <li><a href="@Url.Action("List", "Fillup", new { vehicleId = ViewBag.VehicleId })">Fill Ups</a></li>
        <li><a href="@Url.Action("List", "Reminder", new { vehicleId = ViewBag.VehicleId })" class="selected">Reminders</a></li>
    </ol>
</nav>

<div class="view">
    <ol class="hbox button-group">
		<li class="icon add"><a href="@Url.Action("Add", "Reminder", new { vehicleId = ViewBag.VehicleId })"><span>Add New Reminder</span></a></li>
	</ol>
	@{ Html.RenderPartial("ListPartial.Mobile", Model.Reminders); }
</div>